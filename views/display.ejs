<% include layouts/header.ejs %>
<body>
<% include layouts/menu.ejs %>

<!-- *****************************************************************************************************************
 BLUE WRAP
 ***************************************************************************************************************** -->
<div id="blue">
    <div class="container">
    <div class="row">
      <h3><%= post.title %></h3>
    </div><!-- /row -->
    </div> <!-- /conta -->
</div>

<div class="container">
  <div id="imgs">
    <div class="col-sm-6">
      <div class="large-img-container">
        
          <img class="large-img img-responsive" src="<%= post.pictures_l[0] %>" position="0" width="100%">
        
      </div>
      <div class="small-imgs">
        <p class="help-block">
          Click on image to zoom
        </p>

        <% for (var i = 0; i < post.pictures.length; i++) { %>
          <img class="small-img" src="<%= post.pictures_s[i] %>" width="100px" alert="" position="<%= i %>" srcLarge="<%= post.pictures_l[i] %>">
          <a class="fancybox" rel="group" href="<%= post.pictures[i] %>"></a>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <h4><%= post.title.capitalize() %></h4>
    <hr>
    <p>
      <span class="col-sm-2"> Price: </span>
      <label> $<%= post.price %> </label>
    </p>
    <p>
      <span class="col-sm-2"> Condition: </span>
      <label> <%= post.condition.capitalize() %> </label>
    </p>
    <p>
      <span class="col-sm-2"> Location: </span>
      <label> <%= post.location.city.capitalize() %> </label>
    </p>
    <p>
      <span class="col-sm-2"> Seller: </span>
      <label> <%= post.user.fname.capitalize() %> <%= post.user.lname.capitalize() %> </label>
    </p>
    <p>
      <span class="col-sm-2"> Email: </span>
      <label> <%= post.user.email %> </label>
    </p>
    <div>
      Description:
      <p> <%= post.description %> </p>
    </div>
  </div>
</div>

<% include layouts/footer.ejs %>
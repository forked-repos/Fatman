<div id="blue">
    <div class="container">
    <div class="row">
      <h3>EDIT POST.</h3>
    </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /blue -->

<div class="container">
    <div class="col-sm-2">
        <% include sidemenu.ejs %>
    </div>

    <div class="col-sm-10">
        <form class="form-horizontal" action="" method="post">
            <input  type="hidden" name="csrf" value="<% csrfToken %>">

            <div class="form-group">
                <label class="control-label col-sm-2"> Category: </label>
                <div class='col-sm-10'>
                    <select name="category" class="form-control" required>

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="title" class="col-sm-2 control-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Title" name="title" <% if (oldInput != '') { %>
                                value="<%= oldInput[0].title %>"
                            <% } else { %>
                                value="<%= post.title %>"
                            <% } %> >
                </div>
            </div>

            <div class="form-group">
                <label for="title" class="col-sm-2 control-label">Details</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" rows="3" required placeholder="Details" name="details" >
                        <%   if (oldInput != '') { %>
                                <%= oldInput[0].description %>
                        <%   } else {%>
                                <%= post.description %>
                        <%  }   %>
                    </textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="price" class="col-sm-2 control-label">Price</label>
                <div class="col-sm-3">
                    <div class="input-group">
                        <div class="input-group-addon">$</div>
                        <input type="text" class="form-control" placeholder="Price" name="price" <% if (oldInput != '') { %>
                                    value="<%= oldInput[0].price %>"
                                <% } else { %>
                                    value="<%= post.price %>"
                                <% } %> >
                        <div class="input-group-addon">.00</div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


<% include ../layouts/footer.ejs %>
 <div class='recent-post'>
 	<h2>RECENT POSTS</h2>
 	<div id="container" class="js-masonry">
 		<% for (var i = 0; i < posts.length; i++) { %>
 			<div class="post">
	 			<div class="post-wrapper">
	 				<a href="/display/<%= posts[i].id %>">
		 				<img src="<%= posts[i].pictures_s[0] %>" />
		 			</a>
		 			<div class="title"><%= posts[i].title %></div>
		 			<div class="price">$<%= posts[i].price %></div>
		 			<div class="location left-align"><%= posts[i].location.city.capitalize() %></div>
		 			<div class="user left-align"><%= posts[i].user.fname.capitalize() %></div>
		 		</div>
	 		</div>
 		<% } %>

 	</div>
 </div>


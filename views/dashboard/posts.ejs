<% include ../layouts/header.ejs %>

<body>

<% include ../layouts/menu.ejs %>

<!-- *****************************************************************************************************************
 BLUE WRAP
 ***************************************************************************************************************** -->
<div id="blue">
    <div class="container">
		<div class="row">
			<h3><%= user.fname.toUpperCase() %> <%= user.lname.toUpperCase() %>.</h3>
		</div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /blue -->

<div class="container">
	<div class="col-sm-2">
		<% include sidemenu.ejs %>
	</div>

	<div class="col-sm-10">
			
		<table class="table table-striped table-responsive">
			<tr>
				<th>Picture</th>
				<th>Title</th>
				<th>Description</th>
				<th>Post Date</th>
				<th>Price</th>
				<th>Condition</th>
				<th>City</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
			<% var monthName = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]; %>
			<% for (var i = 0; i < posts.length; i++) { %>
				<tr>
					<td><a href="/display/<%= posts[i]._id %>"><img src="<%= posts[i].pictures_s[0] %>" width="100px" /></a></td>
					<td><%= posts[i].title.substr(0, 20) %>...</td>
					<td><%= posts[i].description.substr(0, 50) %>...</td>
					<td><%= monthName[posts[i].post_date.getMonth()] %> <%= posts[i].post_date.getDate() %>, <%= posts[i].post_date.getFullYear() %></td>
					<td>$<%= posts[i].price %></td>
					<td><%= posts[i].condition %></td>
					<td><%= posts[i].location.city %></td>



					<td><a href="/dashboard/posts/edit/<%= posts[i].id %>">Edit</a></td>
					<td><a href="/dashboard/posts/<%= posts[i].id %>/delete">Delete</a></td>

				</tr>
			<% } %>
		</table>

	</div>
</div>

<% include ../layouts/footer.ejs %>